.single-header
  = render partial: 'front/header'



.buy-container
  .buy-wrapper

    .buy-title
      %h2.buy-title__text
        購入内容の確認

    .buy-main

      .buy-item
        .buy-item__box.clearfix
          = image_tag "pict-reason-01.jpg" ,size: "60x60" ,class: "buy-item__box__image"
          %p.buy-item__box__name abc

      .buy-form

        %p.buy-form__price
          = "500円" 
          %span.buy-form__price--shipping 送料込み
          %span.buy-form__price--shipping 着払い
        .buy-form__point
          %p.buy-form__point__info ポイントはありません

        .buy-form__payment
          .buy-form__payment__box.clearfix
            %p.buy-form__payment__box--head 支払い金額
            %p.buy-form__payment__box--content
              = "500円" 

        
          
        
          .buy-form__error
            %p.buy-form__error__message 配送先と支払い方法の入力を完了してください
          .buy-form__purchase
            = form_tag url: buy_items_path do
              :plain
                <script type="text/javascript" src="https://checkout.pay.jp" class="payjp-button" data-key="pk_test_86b13e1bd8c0366d33309fc0"></script>
           

= render partial: 'front/footer'