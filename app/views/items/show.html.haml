=render "items/header"

.wrapper
  .topContents
    .contents
      .itembox
        %h1.itembox__name 
          =@item.name
        .itembox__imagebox
          -@item.item_images.each do |image|
            .imagebig
              .bigimage
                =image_tag  image.image.url,class:"show-img"
            
           
             
                
        .itembox__price
          %span.plice 
            ￥
            =@item.price
          .itembox__price-ditail
          %span (税込)
          %span 送料込み
      .itembox__Dtail
        =@item.description
      .itemtable
        %table
          %tb
            %tr
              %th 出品者
              %td
                =@item.user.nickname

            %tr
              %th カテゴリー
              %td
                %ul
                  %li
                    =@item.category.name
                  %li
                   
                  %li
                    
            %tr
              %th  ブランド
              %td
                =@item.brand.name
            %tr
              %th  商品のサイズ
              %td
                =@item.size.name
            %tr
              %th  商品の状態
              %td  
                =@item.condition.name
            %tr
              %th  発送料の負担
              %td 
                =@item.delivery_charge.name
            %tr
              %th  発送元の地域
              %td
                =@item.delivery_way.name
            %tr
              %th  発送日の目安
              %td  
                =@item.delivery_date.name
      .buy-box
        - if @item.order_status_id == 4
          = link_to '売り切れました', root_path, class:"sold-btn"
        - elsif user_signed_in?
          - if @item.user_id == current_user.id
            = link_to '編集', edit_item_path(@item) ,class:"edit-btn"
            = link_to '削除', item_path(@item), method: :delete, data: { confirm: "削除しますか？" } ,class:"delete-btn"
          - else
            =link_to "購入画面に進む",buy_items_path ,class:"buy-btn"
            
       
      .optionArea
        %ul
          %li.okini
            =link_to "#" do
              %i{class: "fa fa-star"}
              お気に入り 0
        %ul
          %li.hata
            =link_to "#" do
              %i{class: "fa fa-flag"}
              不適切な商品の通報
      -# コメントフォーム
      .item-coments
        =form_for "#" do |f|
          =f.text_area :content
          %p.noticeMsg
            相手のことを考え丁寧なコメントを心がけましょう。
            %br
            不快な言葉遣いなどは利用制限や退会処分となることがあります。
          %button{name:"button", type:"submit",class:"commentBtn"}
            %i{class:"fa fa-comment"}
            コメントする
      -# footerの上のやつ
  %ul.topform
    %li.befor
     
    %li.after
     
  .relatedItem
    =link_to root_path do
      トップページへ戻る

=render "items/footer"