.header
  .inner
    .inner__top
      %h1.inner__top__icn
        %a{ :href => '#', :class => 'inner__top__icn--image' }
          = image_tag 'logo.png', class: 'inner__top__icn--image--tag' 
      .inner__top__searchBox
        %form.inner__top__searchBox__fom
          %input{:type => "hidden", :class => "inner__top__searchBox__fom--text" }
          %input{:class => "inner__top__searchBox__fom--text", :placeholder => "キーワードから探す", }
          %button{:type => "submit", :class => "inner__top__searchBox__fom--submit"}
            .inner__top__searchBox__fom--submit--box
              = image_tag 'icon-search 1.png', class: 'inner__top__searchBox__fom--submit--box--image'
    .inner__bottom
      %ul.inner__bottom__left
        %li.inner__bottom__left__categories
          %a{ :href => '#', :class => 'inner__bottom__left__categories--categorie' } カテゴリー
        %li.inner__bottom__left__brands
          %a{ :href => '#', :class => 'inner__bottom__left__brands--brand' } ブランド
      %ul.inner__bottom__right
        %li.inner__bottom__right__login
          = link_to "ログイン", new_user_session_path, class:'inner__bottom__right__login--button'
        %li.inner__bottom__right__member
          = link_to "新規会員登録", new_user_registration_path, class: 'inner__bottom__right__member--button'
.wrapper
  .topContents
    .contents
      .itembox
        %h1.itembox__name 
          =@item.name
        .itembox__imagebox
          =@item.item_images.each do |item|
            %ul.imagebig
              %li#bigimage
                =image_tag  item.image.url,alt: @item.item_images.ids
            %ul.imagesmale
             
                
        .itembox__price
          %span.plice 
            ￥
            =@item.price
          .itembox__price-ditail
          %span (税込)
          %span 送料込み
      .itembox__Dtail
        =@item.description
      .itemtable
        %table
          %tb
            %tr
              %th 出品者
              %td
                =@item.user.nickname

            %tr
              %th カテゴリー
              %td
                %ul
                  %li
                    =@item.category.name
                  %li
                   
                  %li
                    
            %tr
              %th  ブランド
              %td
                =@item.brand.name
            %tr
              %th  商品のサイズ
              %td
                =@item.size.name
            %tr
              %th  商品の状態
              %td  
                =@item.condition.name
            %tr
              %th  発送料の負担
              %td  送料込み（出品者負担）
            %tr
              %th  発送元の地域
              %td
                =link_to "#" do
                  岩手県
            %tr
              %th  発送日の目安
              %td  4-7日で発送
      .optionArea
        %ul
          %li.okini
            =link_to "#" do
              %i{class: "fa fa-star"}
              お気に入り 0
        %ul
          %li.hata
            =link_to "#" do
              %i{class: "fa fa-flag"}
              不適切な商品の通報
      -# コメントフォーム
      .item-coments
        =form_for "#" do |f|
          =f.text_area :content
          %p.noticeMsg
            相手のことを考え丁寧なコメントを心がけましょう。
            %br
            不快な言葉遣いなどは利用制限や退会処分となることがあります。
          %button{name:"button", type:"submit",class:"commentBtn"}
            %i{class:"fa fa-comment"}
            コメントする
      -# footerの上のやつ
  %ul.topform
    %li.befor
      =link_to "#" do
        %i{class: "fas fa-angle-left"}
        前のページ
    %li.after
      =link_to "#" do
        次のページ
        %i{class: "fas fa-angle-right"}
  .relatedItem
    =link_to "#" do
      ベビー・キッズをもっと見る
