=render "header"
.search-main
  .search-main__left

  .search-main__right
    .search-main__right__title
      =@search
      の検索結果
    .search-main__right__box
      -unless @items.empty?
        .search-main__right__box__item
          -@items.each do |item|
            =link_to item_path(item.id) do
              = image_tag "#{item.item_images[0].image}", size: '220x200'
            = item.name
            ￥
            = item.price
      -else
        .search-main__right__non
          ="#{@search}は現在出品されていません"

=render "footer"